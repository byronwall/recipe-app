{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "server": "nodemon --watch 'src/*.ts' -e ts --exec \"yarn build_run\"",
    "client": "cd ../client && yarn start",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "start": "node build/index.js",
    "build": "tsc && cd ../client && yarn deploy",
    "build_run": "tsc && yarn start",
    "deploy-copy": "rsync -rvz --include='build/***' --include='node_modules/***' --include='package.json' --exclude='*' ./ root@byroni.us:/root/recipe-app",
    "deploy": "yarn build && yarn deploy-copy"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/nedb": "^1.8.10",
    "@types/node": "^14.0.23",
    "@types/request-promise": "^4.1.46",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "@types/lodash": "^4.14.159",
    "axios": "^0.19.2",
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.19",
    "nedb": "^1.8.0",
    "request-promise": "^4.2.5"
  }
}
